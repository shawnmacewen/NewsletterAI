{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node Server",
            "program": "${workspaceFolder}/index.js",
            "restart": true,
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public",
            "userDataDir": false
        }
    ]
}